<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.talelin.latticy.mapper.DoctorTitleMapper">

    <resultMap id="BaseResultMap" type="io.github.talelin.latticy.model.DoctorTitleDO">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="title_name" jdbcType="VARCHAR" property="titleName"/>
        <result column="number_of_doctors" jdbcType="INTEGER" property="numberOfDoctors"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="created_at" jdbcType="TIMESTAMP" property="createdAt"/>
        <result column="updated_at" jdbcType="TIMESTAMP" property="updatedAt"/>
    </resultMap>

    <!-- 根据职称名称模糊查询职称列表 -->
    <select id="selectByTitleName" resultMap="BaseResultMap">
        SELECT *
        FROM doctor_title
        WHERE title_name LIKE #{titleName}
    </select>

    <!-- 根据职称ID查询职称信息 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT *
        FROM doctor_title
        WHERE id = #{id}
    </select>

    <!-- 查询所有职称列表 -->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT *
        FROM doctor_title
    </select>

</mapper>
