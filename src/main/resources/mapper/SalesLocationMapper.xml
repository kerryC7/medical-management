<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.talelin.latticy.mapper.SalesLocationMapper">

    <resultMap id="BaseResultMap" type="io.github.talelin.latticy.model.SalesLocationDO">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="address" jdbcType="VARCHAR" property="address"/>
        <result column="created_at" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="updated_at" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="delete_time" jdbcType="TIMESTAMP" property="deleteTime"/>
    </resultMap>

    <!-- 根据名称模糊查询销售地点 -->
    <select id="selectByNameLikeKeyword" resultMap="BaseResultMap">
        SELECT *
        FROM sales_locations
        WHERE name LIKE CONCAT('%', #{name}, '%')
    </select>
</mapper>
