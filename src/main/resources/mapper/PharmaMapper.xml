<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.talelin.latticy.mapper.PharmaMapper">

    <resultMap id="BaseResultMap" type="io.github.talelin.latticy.model.PharmaDO">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="address" jdbcType="VARCHAR" property="address"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="policy" jdbcType="VARCHAR" property="policy"/>
        <result column="created_at" jdbcType="TIMESTAMP" property="createdAt"/>
        <result column="updated_at" jdbcType="TIMESTAMP" property="updatedAt"/>
    </resultMap>

    <!-- 根据名称查询医药公司 -->
    <select id="selectByName" resultMap="BaseResultMap">
        SELECT *
        FROM pharmas p
        WHERE p.name = #{name}
    </select>

    <!-- 根据关键字查询医药公司 -->
    <select id="selectByKeyword" resultMap="BaseResultMap">
        SELECT *
        FROM pharmas p
        WHERE p.name LIKE CONCAT('%', #{q}, '%') OR p.policy LIKE CONCAT('%', #{q}, '%')
    </select>

</mapper>
